/* 水平间距 */
.popup-content {
  height: 700rpx;
  display: flex;
  flex-direction: column;
}
.popup-content .header {
  position: relative;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid #eee;
}
.popup-content .header .title {
  font-size: 14px;
  font-weight: 600;
  color: #333;
}
.popup-content .header .close-icon {
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}
.popup-content .data-show {
  height: 120rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #eee;
}
.popup-content .data-show-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.popup-content .data-show-item .title {
  font-size: 12px;
  color: #666;
}
.popup-content .data-show-item .value {
  font-size: 12px;
  color: #666;
}
.popup-content .data-input {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.popup-content .data-input .input-wrapper {
  width: 200rpx;
  margin-top: 30rpx;
  border-bottom: 1px solid #eee;
}
.popup-content .data-switch {
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
}
.popup-content .data-switch-1 {
  margin-left: 300rpx;
  font-size: 14px;
  color: #999;
}
.popup-content .data-switch-2 {
  margin-left: 40rpx;
  font-size: 14px;
  color: #999;
}
.popup-content .data-switch .active {
  color: #333;
}
.popup-content .confirm-btn {
  margin-top: 60rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  height: 88rpx;
}