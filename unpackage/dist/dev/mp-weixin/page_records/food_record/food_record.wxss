/* 水平间距 */
.food-record-header {
  background-color: #fff;
  border-radius: 16rpx;
  height: 460rpx;
  margin: 30rpx;
  display: flex;
  flex-direction: column;
}
.food-record-header .time-wrapper {
  height: 100rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #eee;
}
.food-record-header .time-wrapper .time {
  margin-left: 30rpx;
  font-size: 16px;
  color: #666;
}
.food-record-header .content-wrapper {
  padding: 30rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}
.food-record-header .content-wrapper .content-box1 {
  height: 180rpx;
  display: flex;
  flex-direction: row;
}
.food-record-header .content-wrapper .content-box1 .content-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 33%;
}
.food-record-header .content-wrapper .content-box1 .content-item .charts-box {
  height: 100%;
}
.food-record-header .content-wrapper .content-box1 .content-item .title {
  color: #999;
  font-size: 12px;
}
.food-record-header .content-wrapper .content-box1 .content-item .value {
  color: #333;
  font-size: 14px;
  font-weight: 500;
}
.food-record-header .content-wrapper .content-box1 .content-item .unit {
  color: #999;
  font-size: 12px;
}
.food-record-header .content-wrapper .content-box2 {
  flex: 1;
  display: flex;
  flex-direction: row;
}
.food-record-header .content-wrapper .content-box2 .content-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.food-record-header .content-wrapper .content-box2 .content-item .title {
  font-size: 12px;
  color: #999;
}
.food-record-header .content-wrapper .content-box2 .content-item .progress {
  width: 80%;
}
.food-record-header .content-wrapper .content-box2 .content-item .unit {
  font-size: 12px;
  color: #999;
}
.food-record-list {
  display: flex;
  flex-direction: column;
}