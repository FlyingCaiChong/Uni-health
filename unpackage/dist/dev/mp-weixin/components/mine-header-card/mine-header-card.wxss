/* 水平间距 */
.mine-header-card {
  border-radius: 16rpx;
  background-color: #fff;
  height: 300rpx;
  display: flex;
  flex-direction: column;
}
.mine-header-card .top-box {
  height: 170rpx;
  border-bottom: 1px solid #eeeeee;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.mine-header-card .top-box .img {
  margin-left: 40rpx;
  border-radius: 50rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #eeeeee;
}
.mine-header-card .top-box .user-title {
  color: #333;
  font-size: 16px;
  font-weight: 500;
  margin-left: 30rpx;
}
.mine-header-card .top-box .right-arrow {
  margin-left: auto;
  margin-right: 30rpx;
}
.mine-header-card .bottom-box {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.mine-header-card .bottom-box .bottom-box-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.mine-header-card .bottom-box .bottom-box-item .value {
  color: #333;
  font-size: 14px;
}
.mine-header-card .bottom-box .bottom-box-item .title {
  color: #999;
  font-size: 12px;
}